%h1= @restaurant.name
%p= @restaurant.description
%h2
  Reviews
%ul
  - @restaurant.reviews.each do |review|
    %li
      = review.thoughts
      Rating:
      = review.rating
      = link_to "Edit Review", edit_restaurant_review_path(review)
      = link_to "Delete Review",  restaurant_review_path(review), method: :delete
